@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-10 col-lg-8">
            <h1 class="display-4 text-primary mb-4">Welcome to AllShop</h1>
            <p class="lead text-secondary">
                AllShop is your one-stop online shopping destination — browse and purchase a wide range of products
                including electronics, fashion, home essentials, and more. Designed to be fast, easy, and secure,
                our platform helps you manage your orders, check stock availability, and enjoy a smooth checkout process.
            </p>

            <a class="btn btn-success mt-4 px-5 py-2" asp-controller="Products" asp-action="Index">Start Shopping</a>

